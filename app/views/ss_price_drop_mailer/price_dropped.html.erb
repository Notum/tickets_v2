<div style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 16px; font-size: 15px; color: #374151;">
  <div style="text-align: center; margin-bottom: 16px;">
    <div style="display: inline-block; background: linear-gradient(135deg, #ff6600 0%, #cc5200 100%); color: white; padding: 6px 16px; border-radius: 50px; font-size: 12px; font-weight: 600; letter-spacing: 0.5px; text-transform: uppercase;">SS.COM Price Drop</div>
  </div>
  <p style="margin: 0 0 12px 0; font-size: 14px;">Hi <%= @user.email %>, great news! The following real estate prices have dropped:</p>
  <% @price_drops.each do |drop| %>
    <div style="background: linear-gradient(135deg, #fafafa 0%, #f3f4f6 100%); border-radius: 8px; padding: 10px 12px; margin-bottom: 8px; border: 1px solid #e5e7eb;">
      <table style="width: 100%; border-collapse: collapse;"><tr>
        <td style="vertical-align: middle;">
          <span style="font-weight: 600; font-size: 15px; color: #111827;"><%= drop[:title] %></span>
          <span style="font-size: 12px; color: #6b7280; margin-left: 4px;">(<%= drop[:ad_type].capitalize %>)</span>
        </td>
        <td style="text-align: right; vertical-align: middle;">
          <span style="background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); color: #166534; padding: 3px 8px; border-radius: 4px; font-size: 12px; font-weight: 700;">-<%= number_with_precision(drop[:percentage], precision: 1) %>%</span>
        </td>
      </tr></table>
      <div style="margin-top: 4px;">
        <span style="color: #9ca3af; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Location:</span>
        <span style="color: #6b7280; font-size: 12px; margin-left: 4px;"><%= drop[:location] %></span>
      </div>
      <div style="margin-top: 2px;">
        <span style="color: #9ca3af; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px;">Details:</span>
        <span style="color: #6b7280; font-size: 12px; margin-left: 4px;">
          <% if drop[:rooms] %><%= drop[:rooms] %> rooms<% end %>
          <% if drop[:area] %> · <%= drop[:area] %> m²<% end %>
          <% if drop[:floor] %> · Floor <%= drop[:floor] %><% end %>
          <% if drop[:land_area] %> · Land: <%= drop[:land_area] %> m²<% end %>
        </span>
      </div>
      <table style="width: 100%; border-collapse: collapse; margin-top: 6px;"><tr>
        <td style="vertical-align: middle;">
          <span style="color: #9ca3af; text-decoration: line-through; font-size: 12px;">€<%= number_with_precision(drop[:previous_price], precision: 0, delimiter: ' ') %></span>
          <span style="color: #059669; font-weight: 700; font-size: 15px; margin-left: 4px;">€<%= number_with_precision(drop[:current_price], precision: 0, delimiter: ' ') %></span>
          <span style="color: #166534; font-size: 11px; margin-left: 4px;">(-€<%= number_with_precision(drop[:savings], precision: 0, delimiter: ' ') %>)</span>
        </td>
        <td style="text-align: right; vertical-align: middle;">
          <a href="<%= drop[:url] %>" style="display: inline-block; background: #ff6600; color: white; padding: 4px 10px; border-radius: 4px; font-size: 11px; font-weight: 600; text-decoration: none;">View on SS.COM</a>
        </td>
      </tr></table>
    </div>
  <% end %>
  <p style="color: #9ca3af; font-size: 12px; margin: 12px 0 0 0; text-align: center;">You receive alerts for any price drops on followed ads | Tickets@Petrucho.me</p>
</div>
