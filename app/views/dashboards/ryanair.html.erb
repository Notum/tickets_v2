<div class="space-y-6">
  <h1 class="text-2xl font-bold text-gray-900">Ryanair Dashboard</h1>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Available Destinations</dt>
            <dd class="text-lg font-semibold text-gray-900"><%= @destinations_count %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Your Flight Searches</dt>
            <dd class="text-lg font-semibold text-gray-900"><%= @flight_searches_count %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-center h-full">
        <%= link_to tickets_ryanair_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" do %>
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Search Flights
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Searches -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Recent Flight Searches</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @recent_searches.any? %>
        <% @recent_searches.each do |search| %>
          <div class="px-6 py-4 flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900">
                RIX <span class="mx-2">&rarr;</span> <%= search.ryanair_destination.display_name %>
              </p>
              <p class="text-sm text-gray-500">
                <%= search.date_out.strftime("%b %d") %> - <%= search.date_in.strftime("%b %d, %Y") %>
                (<%= search.trip_duration %> days)
              </p>
            </div>
            <div class="text-right">
              <% if search.priced? %>
                <p class="text-lg font-semibold text-green-600">&euro;<%= number_with_precision(search.total_price, precision: 2) %></p>
              <% elsif search.pending? %>
                <p class="text-sm text-yellow-600">Fetching prices...</p>
              <% else %>
                <p class="text-sm text-red-600">Error</p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          <p>No flight searches yet.</p>
          <p class="mt-2">
            <%= link_to "Search for flights", tickets_ryanair_path, class: "text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
