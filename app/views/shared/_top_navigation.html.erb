<div class="navbar bg-base-100 shadow-md min-h-14">
  <div class="container mx-auto max-w-7xl px-2 sm:px-4 flex justify-between">
    <div class="flex items-center gap-1 sm:gap-2">
      <!-- Mobile dropdown -->
      <div class="dropdown lg:hidden">
        <div tabindex="0" role="button" class="btn btn-ghost btn-sm px-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
          </svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-50 mt-3 w-48 p-2 shadow-lg">
          <li class="menu-title">Flights</li>
          <li><%= link_to "Bode.lv", tickets_bode_path %></li>
          <li><%= link_to "Ryanair", tickets_ryanair_path %></li>
          <li><%= link_to "AirBaltic", tickets_airbaltic_path %></li>
          <li><%= link_to "Norwegian", tickets_norwegian_path %></li>
          <li><%= link_to "FlyDubai", tickets_flydubai_path %></li>
          <li><%= link_to "Turkish Airlines", tickets_turkish_path %></li>
          <li class="menu-title">Accommodation</li>
          <li><%= link_to "Booking.com", accommodation_booking_path %></li>
          <li class="menu-title">Real Estate</li>
          <li><%= link_to "SS.COM Flats", sscom_flats_path %></li>
          <li><%= link_to "SS.COM Houses", sscom_houses_path %></li>
          <li class="divider my-1"></li>
          <li><%= link_to "Profile", profile_path %></li>
          <% if admin_access? %>
            <li class="menu-title">Admin</li>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
        </ul>
      </div>

      <!-- Logo -->
      <a class="btn btn-ghost text-lg sm:text-xl text-primary px-1 sm:px-2">TicketsV2</a>

      <!-- Desktop menu - right next to logo -->
      <ul class="menu menu-horizontal px-1 hidden lg:flex">
        <!-- Flights Dropdown -->
        <li>
          <details data-controller="dropdown">
            <summary>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
              </svg>
              Flights
            </summary>
            <ul class="bg-base-100 rounded-box z-50 w-48 p-2 shadow-lg">
              <li><%= link_to "Bode.lv", tickets_bode_path %></li>
              <li><%= link_to "Ryanair", tickets_ryanair_path %></li>
              <li><%= link_to "AirBaltic", tickets_airbaltic_path %></li>
              <li><%= link_to "Norwegian", tickets_norwegian_path %></li>
              <li><%= link_to "FlyDubai", tickets_flydubai_path %></li>
              <li><%= link_to "Turkish Airlines", tickets_turkish_path %></li>
            </ul>
          </details>
        </li>
        <!-- Accommodation Dropdown -->
        <li>
          <details data-controller="dropdown">
            <summary>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Accommodation
            </summary>
            <ul class="bg-base-100 rounded-box z-50 w-48 p-2 shadow-lg">
              <li><%= link_to "Booking.com", accommodation_booking_path %></li>
            </ul>
          </details>
        </li>
        <!-- Real Estate Dropdown -->
        <li>
          <details data-controller="dropdown">
            <summary>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              SS.COM
            </summary>
            <ul class="bg-base-100 rounded-box z-50 w-48 p-2 shadow-lg">
              <li><%= link_to "Flats", sscom_flats_path %></li>
              <li><%= link_to "Houses", sscom_houses_path %></li>
            </ul>
          </details>
        </li>
        <% if admin_access? %>
          <!-- Admin Users Link -->
          <li>
            <%= link_to users_path do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              Users
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="flex items-center gap-1 sm:gap-2">
      <%= link_to profile_path, class: "text-sm hidden sm:inline hover:underline truncate max-w-[150px] md:max-w-none" do %>
        <%= current_user.email %>
      <% end %>
      <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
