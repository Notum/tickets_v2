<div class="navbar bg-base-100 shadow-md">
  <div class="container mx-auto max-w-7xl px-4 flex justify-between">
    <div class="flex items-center gap-2">
      <!-- Mobile dropdown -->
      <div class="dropdown lg:hidden">
        <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
          </svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-10 mt-3 w-52 p-2 shadow">
          <li class="menu-title">Tickets</li>
          <li><%= link_to "Bode.lv", tickets_bode_path %></li>
          <li><%= link_to "Ryanair", tickets_ryanair_path %></li>
          <li><%= link_to "AirBaltic", tickets_airbaltic_path %></li>
          <li><%= link_to "Norwegian", tickets_norwegian_path %></li>
          <li><%= link_to "FlyDubai", tickets_flydubai_path %></li>
        </ul>
      </div>

      <!-- Logo -->
      <a class="btn btn-ghost text-xl text-primary px-0">TicketsV2</a>

      <!-- Desktop menu - right next to logo -->
      <ul class="menu menu-horizontal px-1 hidden lg:flex">
        <li>
          <details data-controller="dropdown">
            <summary>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
              </svg>
              Tickets
            </summary>
            <ul class="bg-base-100 rounded-box z-10 w-48 p-2 shadow">
              <li><%= link_to "Bode.lv", tickets_bode_path %></li>
              <li><%= link_to "Ryanair", tickets_ryanair_path %></li>
              <li><%= link_to "AirBaltic", tickets_airbaltic_path %></li>
              <li><%= link_to "Norwegian", tickets_norwegian_path %></li>
              <li><%= link_to "FlyDubai", tickets_flydubai_path %></li>
            </ul>
          </details>
        </li>
      </ul>
    </div>

    <div class="flex items-center gap-2">
      <%= link_to profile_path, class: "text-sm hidden sm:inline hover:underline" do %>
        <%= current_user.email %>
      <% end %>
      <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
